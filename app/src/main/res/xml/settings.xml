<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/preference_theme_value_default"
        android:entries="@array/preference_theme_entries"
        android:entryValues="@array/preference_theme_values"
        android:key="@string/preference_theme_key"
        android:summary="%s"
        android:title="@string/preference_theme_title" />

    <ListPreference
        android:defaultValue="@string/preference_speed_default"
        android:entries="@array/preference_speed_entries"
        android:entryValues="@array/preference_speed_values"
        android:key="@string/preference_speed_key"
        android:summary="%s"
        android:title="@string/preference_speed_title" />

    <ListPreference
        android:defaultValue="@string/preference_pitch_default"
        android:entries="@array/preference_pitch_entities"
        android:entryValues="@array/preference_pitch_values"
        android:key="@string/preference_pitch_key"
        android:summary="@string/preference_pitch_summary"
        android:title="@string/preference_pitch_title" />

</PreferenceScreen>